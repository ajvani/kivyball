
#:kivy 1.0.9

<Ball>:
	canvas: 
		Ellipse: 
			source: 'images/ball.png'
			pos: self.pos
			size: self.size 

<Net>: 
	canvas: 
		Rectangle: 
			source: 'images/net.png'
			pos: self.pos 
			size: self.size 

<BackBoard>: 
	canvas: 
		Rectangle: 
			pos: self.pos 
			size: self.size

<KivyBallGame>:
	ball: basket_ball
	basket: net 
	board: back_board

	Label:
		font_size: root.width / 10
		center_x: root.width / 2
		top: root.top - (root.height / 10)
		text: str(root.ball.score)

	Ball: 
		id: basket_ball
		size: root.width / 8, root.height / 8
		center_x: root.width / 10
		center_y: root.height / 10

	Net: 
		id: net
		size: root.width / 5, root.height / 4 
		pos: root.width * 3 / 4, root.height / 3

	BackBoard: 
		id: back_board 
		pos: (root.width / 5) + (root.width * 3 / 4), root.height / 2
		size: root.width / 10, root.height / 3




